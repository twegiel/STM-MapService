<Window x:Class="MapServiceTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapServiceTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Stretch="None" x:Name="Image"
               Grid.Column="0"/>
        <StackPanel Grid.Column="1">
            <Button Click="Button_Click_Thumbnail">Thumbnail</Button>
            <Button Click="Button_Click_DetailedImage">Detailed Image</Button>
            <Button Click="Button_Click_ByCoordinates">By coordinates</Button>
        </StackPanel>
    </Grid>
</Window>
